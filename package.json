{
  "name": "@vise-ssr/monorepo",
  "private": "true",
  "version": "0.1.0",
  "description": "Vue3 SSR framework with vite & typescript",
  "scripts": {
    "start": "yarn install",
    "postinstall": "git update-index --assume-unchanged ./packages/core/bin/vise.js ./packages/express-server/bin/vise-express.js",
    "clean": "npm-run-all -p 'clean --workspaces'",
    "build:core": "npm run build -w=packages/core",
    "eslint": "eslint --ext .ts,.js ./",
    "eslint:fix": "eslint --fix --ext .ts,.js ./",
    "syncversion": "./scripts/sync-vise-version.mjs",
    "test": "vitest run -c vitest.config.ts"
  },
  "repository": {},
  "author": "stauren@qq.com",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.18.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "^7.32.0",
    "eslint-config-tencent": "^1.0.4",
    "eslint-plugin-folders": "^1.0.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^37.0.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "tslib": "^2.3.1",
    "typescript": "~4.6.3",
    "vite": "^3.1.4",
    "zx": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.23",
    "@vitejs/plugin-vue": "^3.1.0",
    "vue": "^3.2.25",
    "jsdom": "^18.1.0",
    "vitest": "^0.24.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "vitest related"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
