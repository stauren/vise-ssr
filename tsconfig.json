{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "lib": ["esnext", "dom"],
    "paths": {
    },
    "rootDirs": [
      "packages/core",
      "packages/app-vue3-intro",
      "packages/app-react-intro",
      "packages/express-server",
      "packages/vite-plugin-visecss"
    ]
  },
  "include": [
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.vue",
    "packages/**/src/**/*.d.ts",
    "packages/**/vise-config/**/*.ts",
    "packages/**/vise-config/**/*.d.ts",
    "packages/**/types/**/*.d.ts",
    "packages/**/pm2.config.cjs",
    "packages/**/vise.config.ts",
    "packages/**/generate-cache-key.ts",
    "packages/**/rollup.config.js",
    "packages/**/jest.config.ts",
    "packages/**/.eslintrc.cjs",
    "packages/**/scripts/*.js",
    "packages/**/src/**/*.tsx",
    "scripts/*.mjs",
    "jest.config.ts",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
