{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "lib": ["esnext", "dom"],
    "paths": {
    },
    "rootDirs": [
      "packages/core",
      "packages/shared",
      "packages/vue3",
      "packages/react",
      "packages/express-server",
      "playground/app-vue3-intro",
      "playground/app-react-intro"
    ]
  },
  "include": [
    "packages/**/src/**/*",
    "packages/**/types/**/*",
    "packages/**/rollup.config.js",
    "packages/**/scripts/*.js",
    "playground/**/src/**/*",
    "scripts/*",
    "vitest.config.ts",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
